<%= link_to(user_piece_path(piece.user, piece)) do %>

	<div id = "piece-thumb">
		<li>
		<p>
			<%= image_tag(piece.image.url(:thumb)) %> 
		<p>
  			<b>Name:</b>
  			<%= piece.name %>
		</p>

		<p>
  			<b>Link:</b>
  			<%= piece.link %>
		</p>

		<p>
  			<%= link_to 'Destroy Piece', [piece.user, piece], :confirm => 'Are you sure?', :method => :delete %>
		</p>
		</li>
	</div>

<% end %>

