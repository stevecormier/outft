<%= form_for([@user, @user.outfits.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="text">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
	<%= f.collection_select(:piece_ids, Piece.all, :id, :name, {:include_blank => true}, {:selected => @outfit.piece_ids, :multiple => true} )%>
	
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
